<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profile"
        android:id="@+id/textView" />
    <TextView android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Personal"
        android:id="@+id/textView2" />


    <EditText android:hint="Name"
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        />

    <EditText
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:hint="Address"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:background="@drawable/round_c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        />

    <EditText
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:background="@drawable/round_c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        />
    <EditText
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:hint="Phone"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:background="@drawable/round_c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        />
    <TextView android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Payment"
        />
    <EditText android:paddingLeft="10dp"
        android:hint="Card Number"
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardnumber"

        />
    <LinearLayout android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
        android:orientation="horizontal" android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText android:hint="Expire Date"
            android:textColorHint="@android:color/secondary_text_light_nodisable"
            android:paddingLeft="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expiredate"
            android:layout_weight="1"
            />

        <EditText android:hint="CVV"
            android:textColorHint="@android:color/secondary_text_light_nodisable"
            android:paddingLeft="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cvv"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@android:color/white"
        android:id="@+id/update"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
