<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B59B6"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Button03"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:layout_alignLeft="@+id/Button01"
        android:onClick="ApplytheTheme"
        android:text="Night" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/Button02"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:onClick="ApplytheTheme"
        android:text="Afternoon" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="11dp"
        android:onClick="ApplytheTheme"
        android:text="Evening" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Theme Selection"
        android:textColor="#5E1C7E"
        android:textSize="55px" />

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:onClick="ApplytheTheme"
        android:text="Morning" />

</RelativeLayout><!-- From: file:/C:/Users/natraj.gadumala/AndroidStudioProjects/HAApplication/app/src/main/res/layout/themes.xml -->